# Step 1: Use the official Python image
FROM python:3.11-slim

# Step 2: Install system dependencies (add any necessary packages here)
RUN apt-get update && apt-get install -y \
    gcc \
    libpq-dev \
    build-essential

# Step 3: Set the working directory in the container
WORKDIR /app

# Step 4: Copy the requirements file and install dependencies
COPY requirements.txt .

RUN pip install --no-cache-dir -r requirements.txt

# Step 5: Copy the FastAPI app files to the container
COPY . .

# Step 6: Expose port (FastAPI typically runs on port 8000)
EXPOSE 8000

# Step 7: Command to run the FastAPI app
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
